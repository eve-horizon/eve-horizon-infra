{
  "version": 1,
  "upstream": {
    "repo": "https://github.com/eve-horizon/eve-horizon-infra.git",
    "branch": "main",
    "remote_name": "upstream"
  },
  "last_sync": {
    "commit": null,
    "timestamp": null,
    "summary": null
  },
  "sync_policy": {
    "always": [
      "k8s/base/",
      "terraform/*/modules/",
      "bin/eve-infra",
      "scripts/",
      ".github/workflows/",
      "skills/",
      "skills.txt"
    ],
    "never": [
      "config/platform.yaml",
      "config/secrets.env",
      "config/kubeconfig.yaml",
      ".upstream-sync.json",
      "terraform/*/terraform.tfvars"
    ],
    "ask": [
      "k8s/overlays/",
      "terraform/*/main.tf",
      "terraform/*/variables.tf",
      "terraform/*/outputs.tf",
      ".gitignore",
      "CLAUDE.md",
      "README.md",
      "DEPLOYMENT.md",
      "UPGRADE.md",
      "CHANGELOG.md"
    ]
  },
  "history": []
}
